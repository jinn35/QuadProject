#include <stdio.h>
#include <float.h>

int main()
{
	printf("The max number of decimal digits without change after rounding (float): %.10e \n", FLT_DIG);
	printf("The max number of decimal digits without change after rounding (double): %.10e \n", DBL_DIG);
	printf("The number of digits in the mantissa (double): %.10e \n", DBL_MANT_DIG);
	printf("The number of digits in the mantissa (float): %.10e \n", FLT_MANT_DIG);

}
